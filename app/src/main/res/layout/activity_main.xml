<!-- res/layout/activity_main.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Symptom Name Input Field -->
    <EditText
        android:id="@+id/editTextSymptomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Symptom Name"
        android:inputType="text"/>

    <!-- Symptom Severity Input Field -->
    <EditText
        android:id="@+id/editTextSymptomSeverity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Symptom Severity"
        android:inputType="numberDecimal"/>

    <!-- Submit Symptom Button -->
    <Button
        android:id="@+id/buttonSubmitSymptom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnSubmitSymptom"
        android:text="Submit Symptom"/>

    <!-- Get Diet Button -->
    <Button
        android:id="@+id/buttonGetDiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Diet"/>

</LinearLayout>
